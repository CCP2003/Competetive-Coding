#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	for(int i=0;i<t;i++){
	    int n;
	    cin>>n;
	    int cnt=0;
	    long ans=0;
	    for(int j=0;j<n;j++){
	        int temp;
	        cin>>temp;
	        if(temp==1){
	            cnt++;
	            ans=ans+cnt;
	        }
	        else{
	           // ans=ans+(cnt*(cnt+1)/2);
	            cnt=0;
	        }
	    }
	   // ans=ans+(cnt*(cnt+1)/2);
	    cout<<ans<<endl;
	}
	return 0;
}
